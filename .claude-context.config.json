{
  "project": {
    "name": "Tale Forge Reborn",
    "rootPath": ".",
    "indexName": "tale-forge-context"
  },
  "embedding": {
    "provider": "openai",
    "model": "text-embedding-3-small",
    "dimensions": 1536
  },
  "vectorDB": {
    "provider": "zilliz",
    "uri": "YOUR_ZILLIZ_CLOUD_URI_HERE",
    "token": "YOUR_ZILLIZ_CLOUD_TOKEN_HERE"
  },
  "indexing": {
    "chunkSize": 1000,
    "chunkOverlap": 200,
    "filePatterns": [
      "**/*.ts",
      "**/*.tsx", 
      "**/*.js",
      "**/*.jsx",
      "**/*.sql",
      "**/*.md",
      "**/*.json"
    ],
    "excludePatterns": [
      "node_modules/**",
      "dist/**",
      "build/**",
      ".git/**",
      "**/*.test.*",
      "**/*.spec.*"
    ]
  },
  "search": {
    "hybridSearch": true,
    "bm25Weight": 0.3,
    "denseWeight": 0.7,
    "maxResults": 10
  }
}